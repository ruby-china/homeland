<h1>Listing Comments</h1>

<table class='grid table-bordered table-striped table-condensed'>
  <tr>
    <th>Able Type</th>
    <th>Able ID</th>
    <th>User</th>
    <th>Body</th>
    <td style="width:120px;">At</td>
    <td style="width:40px;"></td>
  </tr>

<% @comments.each do |item| %>
  <tr id="comment<%= item.id %>">
    <td><%= item.commentable_type %></td>
    <td><%= item.commentable_id %></td>
    <td><%= item.user.login if !item.user.blank? %></td>
    <td><%= item.body %></td>
    <td><%= l item.created_at, :format => :short %></td>
    <td><%= link_to '', edit_cpanel_comment_path(item), :class => "icon small_edit" %>
    <%= link_to '', cpanel_comment_path(item), 'data-confirm' => 'Are you sure?', method: :delete, remote: true, :class => "icon small_delete" %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @comments %>