<div id="cpanel_location" class="form">

<%= simple_form_for([:cpanel,@location]) do |f| %>
  <%= render "/shared/error_messages", :target => @location  %>
  <fieldset>
    <legend><%= t("common.edit") %></legend>
      <%= f.input :name %>
      <%= f.input :users_count %>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
      <%= f.submit t("common.save"), :class => "btn btn-primary" %> or <%= link_to t("common.cancel"), cpanel_locations_path %></div>
    </div>
  </fieldset>
<% end %>
</div>
