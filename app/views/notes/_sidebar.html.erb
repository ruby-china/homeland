<div class="sidebar col-md-3">
  <div class="panel panel-default">
    <div class="panel-body">
      <a href="<%= new_note_path %>" class="btn btn-success btn-block">新建 Note</a>
    </div>
    <div class="panel-footer"><a href="<%= notes_path %>">查看所有 <%= current_user.notes.count %> 条 Note...</a></div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">最近创建的内容</div>
    <ul class="list-group">
      <% @recent_notes.each do |note| %>
        <li class="list-group-item">
          <%= link_to note.display_title, note %>
        </li>
      <% end %>
    </ul>

  </div>
</div>

