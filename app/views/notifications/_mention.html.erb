<%
  case notification.target
  when Reply
%>
  <%
    reply = notification.target
    topic = notification.second_target || reply.topic
  %>
  <div class="media-heading">
    <span class="info">在 <%= topic_title_tag(topic) %> 提及你：</span>
  </div>
  <% if reply.present? %>
    <div class="media-content summary markdown">
      <%= reply.body_html %>
    </div>
  <% end %>
<% when Topic %>
  <%
    topic = notification.target
  %>

  <% if topic.blank? %>
    <div class="media-body">相关信息已删除</div>
  <% else %>
    <div class="media-heading">
      在 <%= topic_title_tag(topic) %> 提及你：
    </div>
    <div class="media-content summary markdown">
      <%= topic.body_html %>
    </div>
  <% end %>
<% end %>
