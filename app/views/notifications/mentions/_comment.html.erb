<%
  comment = notification.target
  second_target = notification.second_target
%>

<% if second_target.blank? %>
  <div class="media-body">相关信息已删除</div>
<% else %>
  <%
  case notification.second_target_type
  when "Post" %>
    <div class="media-heading">
      在 <a href="<%= homeland_press.post_path(second_target) %>"><%= second_target.title %></a> 的评论中提及你：
    </div>
    <div class="media-content summary markdown">
      <%= comment.body_html %>
    </div>
  <% when "Page" %>
    <div class="media-heading">
      在 <a href="<%= homeland_wiki.page_path(second_target) %>"><%= second_target.title %></a> 的评论中提及你：
    </div>
    <div class="media-content summary markdown">
      <%= comment.body_html %>
    </div>
  <% end %>
<% end %>
