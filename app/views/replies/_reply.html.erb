<div class="reply" id="reply<%= reply_counter + 1 %>">
  <div class="pull-left face"><%= user_avatar_tag(reply.user, :normal) %></div>
  <div class="infos">
    <div class="info">
      <span class="name"><%= user_name_tag(reply.user) %></span>
      <span class="time">
        <%= reply_counter + 1 %><%= t("common.floor")%>, <%= raw t("common.reply_at", :time => timeago(reply.created_at)) %>
        <% if owner?(reply) %>
          <%= link_to("", edit_topic_reply_path(@topic,reply), :class => "icon small_edit", :title => "修改回帖")%>
        <% end %>
        <%= link_to("", "#",
            :onclick => "return Topics.reply(#{reply_counter+1},'#{reply.user.login}' );", 
            :title => t("topics.reply_this_floor"), :class => "icon small_reply" )
        %>
      </span>
    </div>
    <div class="body">
      <%#= reply.body %>
      <%= format_topic_body(reply.body, :mentioned_user_logins => reply.mentioned_user_logins) %>
    </div>
  </div>
</div>
