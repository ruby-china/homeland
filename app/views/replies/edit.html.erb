<%= render "/topics/base" %>

<div class="sidebar">
  <div class="box">
    <%= t("reply.topic_location")%>:<br />
    <%= render_topic_title(@reply.topic) %>
  </div>
  <div class="box">
    <%= render_cell :topics, :reply_help_block %>
  </div>
</div>
<div class="content">
    <div class="box">
      <%= simple_form_for([@topic,@reply]) do |f| %>
        <%= render "shared/error_messages", :target => @reply %>
        <fieldset>
          <legend><%= t("reply.edit_reply")%></legend>
          <div class="control-group edit_tools">
            <label class="control-label"></label>
            <div class="controls">
              <%= render "/topics/editor_toolbar" %>
            </div>
          </div>
          <%= f.input :body, :as => :text, :input_html => { :class => "topic_editor xxlarge", :rows => "20" } %>
          <div class="form-actions">
            <%= f.submit t("common.save"), :class => "btn btn-primary", :disable_with => t("common.saving") %>
            <a href="<%= topic_path(@topic) %>" class="btn"><%= t("common.cancel") %></a>
          </div>
        <% end %>
    </div>
</div>
