<%
title = hit.dig(:_formatted, :title)
description = hit.dig(:_formatted, :body)
url = topic_url(hit[:id])
%>
<div class="result">
  <div class="title"><%= link_to highlight(title), url %></div>
  <div class="info">
    <span class="url"><%= link_to url, url %></span>
    <span class="date"><%= hit[:updated_at]&.to_time&.to_date %></span>
  </div>
  <div class="desc"><%= highlight(description) %></div>
</div>
