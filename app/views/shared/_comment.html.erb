<div class="comment media">
  <div class="avatar media-left mr-3">
    <%= user_avatar_tag(comment.user, :md) %>
  </div>
  <div class="media-body">
    <div class="info media-heading mb-2">
      <span class="name"><%= user_name_tag(comment.user) %></span> <%= t("common.published_at") %> <% timeago(comment.created_at) %>
    </div>
    <div class="body markdown">
      <%= comment.body_html %>
    </div>
  </div>
</div>
