<% cache({:action => 'index', :t => CacheVersion.sites_updated_at}, :expires_in => 1.days) do %>
  <div id="site_nodes">
    <div class="box">
      <%= raw SiteConfig.site_index_html %>
      <% if can? :create, Site %>
        <%= link_to(t("sites.create"), new_site_path, :class => "btn btn-success")%>
      <% end %>
    </div>
    <% @site_nodes.each do |node| %>
    <div class="box">
      <h2><%= node.name %></h2>
      <div class="row">
        <% node.sites.each do |item| %>
          <div class="span3 site">
            <%= image_tag(item.favicon, :class => "favicon")%>
            <%= link_to item.name, item.url, :target => "_blank", :rel => "userpopover",
            :title => item.name, "data-content" => item.desc %>
          </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
<% end %>