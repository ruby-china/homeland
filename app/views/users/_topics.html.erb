<table class="node_topics table">
  <tr class="head">
    <td class="replies"><%=t("common.reply_count")%></td>
    <td class="title"><%=t("common.title")%></td>
    <td class="replied_at"><%=t("common.published_at")%></td>
  </tr>
  <% topics.each do |topic| %>
  <tr class="topic <%= cycle("odd","") %>">
    <td class="replies"><%= topic.replies_count %> </td>
    <td class="title"><%= link_to(topic.title, topic_path(topic)) %></td>
    <td class="replied_at"> <%= timeago(topic.created_at) %></td>
  </tr>
  <% end %>
</table>