<h1><%= @location.name %>çš„<%= t("users.hot_users") %></h1>
<div id="users" class="box">
  <div id="hot_users" class="row user_list">
    <% if !@users.blank? %>
      <% @users.each do |item| %>
        <div class="item col-xs-3 col-sm-2 col-md-1">
          <div class="avatar"><%= user_avatar_tag(item) %></div>
          <div class="name"><%= user_name_tag(item) %></div>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= will_paginate @users %>
</div>
