<div class="row">
  <div class="col-md-8">
    <%= render "menu" %>
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="node-topics table">
          <tr class="head">
            <td class="opts"><%= t("common.node") %></td>
            <td class="title"><%= t("common.title") %></td>
          </tr>
          <% @topics.each do |item| %>
          <% next if item.blank? %>
          <tr class="topic <%= cycle('odd',"") %>">
            <td><%= render_node_name(item.node_name,item.node_id) %></td>
            <td class="title"><%= topic_title_tag(item) %></td>
          </tr>
          <% end %>
        </table>
      </div>
      <div class="panel-footer">
        <%= will_paginate @topic_ids %>
      </div>
    </div>
  </div>
  <%= render "sidebar", user: @user %>
</div>