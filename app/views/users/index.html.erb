<div id="users">
  <div class="info"><%= t("users.current_have") %> <%= @total_user_count %> <%= t("users.users_joined") %> <%= Setting.app_name %>ã€‚</div>
  <div id="hot_users" class="user_list box clearfix">
    <h2><%= t("users.hot_users") %></h2>
    <% @active_users.each do |item| %>
      <div class="item span1">
        <div class="avatar"><%= user_avatar_tag(item) %></div>
        <div class="name"><%= user_name_tag(item) %></div>
      </div>
    <% end %>
  </div>

  <div id="recent_users" class="user_list box clearfix">
    <h2><%= t("users.recent_joined") %></h2>
    <% @recent_join_users.each do |item| %>
      <div class="item span1">
        <div class="avatar"><%= user_avatar_tag(item) %></div>
        <div class="name"><%= user_name_tag(item) %></div>
      </div>
    <% end %>
  </div>
</div>
