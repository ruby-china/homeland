defaults: &defaults

development:
  <<: *defaults
  sessions:
    default:
      hosts:
        - SETUP_DEVELOPMENT_HOST
      database: ruby_china_dev

test:
  <<: *defaults
  sessions:
    default:
      hosts:
        - SETUP_DEVELOPMENT_HOST
      database: ruby_china_test

# set these environment variables on your prod server
production:
  <<: *defaults
  sessions:
    default:
      hosts:
        - 127.0.0.1:27017
      database: ruby_china